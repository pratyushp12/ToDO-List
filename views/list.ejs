<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To-Do List</title>

  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">


      <% newItems.forEach((newItem)=>{ %>
        <form action="/delete" method="post">

        <div class="item">
          <input type="checkbox" name="checkedItem" value="<%= newItem._id %>" onchange="this.form.submit()">
        <p><%= newItem.name %></p>
      </div>
      <input type="hidden" name="Routelocation" value="<%= listTitle%>"></input>
      </form>
      <% }) %>

        <form action="/" method="post">
          <input type="text" name="addList" placeholder="Enter item to add " autocomplete="off">
          <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

  </div>


</body>


